    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "babel-preset-minify": "^0.5.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "lodash.clonedeep": "^4.5.0"
